@model RmsysStudentPortal.web.Models.AddStudentViewModel

<h1>Add Student</h1>

<form method="post">
    <div Class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div> 

    <div Class="mt-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Email" />
    </div> 

    <div Class="mt-3">
        <label class="form-label">Phone</label>
        <input type="text" class="form-control" asp-for="Phone" />
    </div>

    <div Class="mt-3">
        <label class="form-label">Address</label>
        <input type="text" class="form-control" asp-for="Address" />
    </div>

    <div Class="mt-3">
        <input type="checkbox" class="form-check-Subscribed" asp-for="Subscribed" />
        <label class="form-check-label" for ="Subscribed">Subscribed</label>
    </div>

    <div Class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>